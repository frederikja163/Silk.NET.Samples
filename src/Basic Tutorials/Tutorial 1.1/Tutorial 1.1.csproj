<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <RootNamespace>Silk.NET.Tutorial11</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Silk.NET.Input" Version="1.0.0-preview2" />
      <PackageReference Include="Silk.NET.Input.Common" Version="1.0.0-preview2" />
      <PackageReference Include="Silk.NET.OpenGL" Version="1.0.0-preview2" />
      <PackageReference Include="Silk.NET.Windowing" Version="1.0.0-preview2" />
      <PackageReference Include="Silk.NET.Windowing.Common" Version="1.0.0-preview2" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Shader.frag">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="Shader.vert">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
